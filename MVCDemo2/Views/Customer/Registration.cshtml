@{
}
@model MVCDemo2.Models.CustomerEntity
<h1>Customer Registration</h1>

@using(Html.BeginForm("Register","Customer",FormMethod.Post))
{
    <table>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(m => m.Name) </td>
        </tr>
        <tr>
            <td>Age</td>
            <td>@Html.TextBoxFor(m => m.Age)</td>
        </tr>
        <tr>
            <td>Age</td>
            <td>@Html.CheckBoxFor(m => m.isAcceptingNews)</td>
        </tr>
        <tr>
            <td rowspan="2">
                <input type="submit" value="Register" />
            </td>
        </tr>
    </table>
}

   
    
